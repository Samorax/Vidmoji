@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul>
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Management", "MyAccount", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>Log off</a></li>
            <li>
                <a href="/MyAccount"><i class="fa fa-list-alt"></i>&nbsp;My Account</a>
                <ul>
                    <li>@Html.ActionLink("Overview","Index","MyAccount")</li>
                    <li>@Html.ActionLink("Profile Setup","Profile","MyAccount")</li>
                    <li>@Html.ActionLink("Stuff I Liked","Library","MyAccount")</li>
                    <li>@Html.ActionLink("Email Options","EmailSettings","MyAccount")</li>
                    <li>@Html.ActionLink("Manage Account","Management","MyAccount")</li>
                    <li>@Html.ActionLink("Settings","Settings","MyAccount")</li>
                </ul>
            </li>
        </ul>
                }
            }
            else
            {
          <ul>
            <li><a href ="/Account/Login" id="loginLink"><i class="fa fa-sign-in"></i>Log In</a></li>
            <li><a href="/Account/Register" id="registerLink"><i class="fa fa-list-alt"></i>Register</a></li>
         </ul>   

    }

