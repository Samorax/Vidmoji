
@{
    ViewBag.Title = "Email Options - Video Starter Kit";
}

<div class="row">
    <div class="page-content">
        <div class="container-nav">
            <div id="MC_left_nav1_nav" class="container">
                <ul class="nav nav-tabs" data-tabs="tabs">
                    <li class="active">@Html.ActionLink("Overview", "Index")</li>
                    <li class="">@Html.ActionLink("Profile SetUp", "ProfileSetup")</li>
                    <li class="">@Html.ActionLink("Email Options", "EmailOptions")</li>
                    <li class="">@Html.ActionLink("Manage", "ManageAccount")</li>
                    <li class="">@Html.ActionLink("Settings", "Settings")</li>
                    <li class="">@Html.ActionLink("Library", "Library")</li>
                </ul>
            </div>
        </div>
        <div class="tab-content container account-wrapper">
            <div class="tab-pane active" id="My-Account">


                <script type="text/javascript">
    $(function () {
        $('#ctl00_MC_emailo1_r_nosend').click(function () {
            $('#ctl00_MC_emailo1_chk_lst').removeClass('item');
            $('#ctl00_MC_emailo1_chk_lst').addClass('ui-state-disabled');

            $('#ctl00_MC_emailo1_chk_lst :input').attr('disabled', true);
            //$('#ctl00_MC_chk_ccomment').attr('disabled', true);

        });

        $('#ctl00_MC_emailo1_r_send').click(function () {
            $('#ctl00_MC_emailo1_chk_lst').removeClass('ui-state-disabled');
            $('#ctl00_MC_emailo1_chk_lst').addClass('item');

            $('#ctl00_MC_emailo1_chk_lst :input').removeAttr('disabled');
            //$('#ctl00_MC_chk_ccomment').removeAttr('disabled');
        });
    });


                </script>
                <div id="MC_emailo1_msg"></div>
                <h3>Email Options</h3>
                <hr class="colorgraph">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    E-mail Address
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="item_pad_2">
                                    <p> Enter a new email address and your current password, and click "Send Email". You will receive a confirmation email at the new address containing a link to confirm the change.</p>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <div class="form-group">
                                            <strong>Current E-mail Address:</strong> <span id="MC_emailo1_cemail">sam.azeez@webease.net</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        <div class="form-group">
                                            New E-mail Address:
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-5 col-md-5">
                                        <div class="form-group">
                                            <input name="ctl00$MC$emailo1$txt_nemail" maxlength="50" id="MC_emailo1_txt_nemail" class="form-control" type="text">
                                            <span id="MC_emailo1_EmailRequired" title="required" style="display:none;">required</span>
                                            <span id="MC_emailo1_EmailRequiredFormat" title="A valid email address is required." style="display:none;">Invalid email.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        <div class="form-group">
                                            Account Password:
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-5 col-md-5">
                                        <div class="form-group">
                                            <input name="ctl00$MC$emailo1$txt_pass" maxlength="50" id="MC_emailo1_txt_pass" class="form-control" type="password">
                                            <span id="MC_emailo1_PasswordRequired" title="required" style="display:none;">required</span>
                                        </div>
                                    </div>
                                </div>
                                <hr class="colorgraph">
                                <div class="row">
                                    <div class="col-xs-12 col-md-6 mobi-center">
                                        <input name="ctl00$MC$emailo1$btn_send" value="Send Confirmation" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;ctl00$MC$emailo1$btn_send&quot;, &quot;&quot;, true, &quot;val_emlopt&quot;, &quot;&quot;, false, false))" id="MC_emailo1_btn_send" class="btn btn-primary" type="submit">
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#interests">
                                    How Often We Email You
                                </a>
                            </h4>
                        </div>
                        <div id="interests" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        <div class="form-group">
                                            <input id="MC_emailo1_r_send" name="ctl00$MC$emailo1$seml" value="r_send" checked="checked" type="radio">&nbsp;Send individual emails for the events below.
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <div class="form-group">
                                            <div id="MC_emailo1_chk_lst" style="padding-left: 10px; line-height: 20px;" class="item">
                                                <input id="MC_emailo1_chk_vcomment" name="ctl00$MC$emailo1$chk_vcomment" checked="checked" type="checkbox">&nbsp;One of my videos receives a comment or a video response.<br>
                                                <input id="MC_emailo1_chk_ccomment" name="ctl00$MC$emailo1$chk_ccomment" checked="checked" type="checkbox">&nbsp;Someone leaves a comment on my channel.<br>
                                                <input id="MC_emailo1_chk_pmsg" name="ctl00$MC$emailo1$chk_pmsg" checked="checked" type="checkbox">&nbsp;I receive a private message.<br>
                                                <input id="MC_emailo1_chk_finvite" name="ctl00$MC$emailo1$chk_finvite" checked="checked" type="checkbox">&nbsp;I receive a friend invite from another user.<br>
                                                <input id="MC_emailo1_chk_subscribe" name="ctl00$MC$emailo1$chk_subscribe" checked="checked" type="checkbox">&nbsp;Someone subscribes to my channel.<br>
                                            </div>
                                            <div class="item_pad_2">
                                                <input id="MC_emailo1_r_nosend" name="ctl00$MC$emailo1$seml" value="r_nosend" type="radio">&nbsp;Don't send any emails for the above events.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="colorgraph">
                                <div class="row">
                                    <div class="col-xs-12 col-md-6 mobi-center">
                                        <input name="ctl00$MC$emailo1$btn_bsave" value="Save Changes" id="MC_emailo1_btn_bsave" class="btn btn-primary" type="submit">

                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

