@using WebApplication1.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Sign Up for free - Video Starter Kit";
}

<div class="row">
    <div id="MC_msg"></div>
    <div class="module ui-corner-all">
        <div id="MC_pnlLogin">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Please Sign Up <small>It's free and always will be.</small></h2>
                    <hr class="colograph" />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <fieldset>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",placeholder="Enter UserName" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Countryname)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.Countryname, new SelectList(new WebApplication1.Services.CountryNames().CountryName), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AccountType)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.AccountType, new SelectList(new string[] { "Comedian", "Musician", "Standard" }), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Gender)
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    <div>
                                        <label class="radio-inline" for="Male">@Html.RadioButtonFor(m => m.Gender, "Male", new { id = "Male" }) Male</label>
                                    </div>
                                    <div>
                                        <label class="radio-inline" for="Female">@Html.RadioButtonFor(m => m.Gender, "Female", new { id = "Female" }) Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <div class="form-group">
                                    
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <div class="form-group">
                                    <div>

                                    </div>
                                    <div>
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.TermsAgreement, new { @checked = "true" })
                                            <label for="TermsAgreement">I agree to the <a href="terms">Terms</a> of use and <a href="privacy">Privacy Policy</a></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item_pad_4">@Html.ActionLink("Sign In", "Login")</div>
                        <hr class="colograph" />
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" />
                            </div>
                            <div class="col-xs-12 col-md-6">
                                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                            </div>
                        </div>
                    </fieldset>

                }
                </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
