
@{
    ViewBag.Title = "Library My Videos -Video Starter kit";
}


<div class="tab-pane myaccount-inner-wrap active" id="My-Account">
    <div class="row">
        <div class="col-md-3">
            <div id="MC_vd_nav1_nav" class="list-group">
                @Html.ActionLink("My Albums", "MyAlbums", new { @class = "list-group-item condensed" }))
                @Html.ActionLink("My Videos", "LibraryVideos", new { @class = "list-group-item condensed active" })
                @Html.ActionLink("My Audios", "LibraryAudios", new { @class = "list-group-item condensed" })
                @Html.Action("My Photos", "LibraryPhotos", new { @class = "list-group-item condensed" })
            </div>
        </div>
        <div class="col-md-9">
            <!-- main content section -->
            <span id="MC_myvideos_v11_UpdatePanel2"></span>
            <div id="MC_myvideos_v11_msg">
            </div>
            <div class="row">
                <div class="col-md-7 col-lg-9">
                    <h3 id="MC_myvideos_v11_header_txt">My Tagged Videos</h3>
                </div>
                <div class="col-md-5 col-lg-3">
                    <div class="input-group input-group-sm">
                        <input name="ctl00$MC$myvideos_v11$txt_search" id="MC_myvideos_v11_txt_search" class="form-control" placeholder="Search Library" type="text">
                        <span class="input-group-btn">
                            <input name="ctl00$MC$myvideos_v11$btn_u_search" value="Search" id="MC_myvideos_v11_btn_u_search" class="btn btn-primary" type="submit">
                        </span>
                    </div>
                </div>
            </div>
            <hr class="colorgraph">
            <div class="col-xs-12 col-md-6">
               @Html.ActionLink("Create Album", "CreateVideoAlbum", null, new { title = "Upload New Video Album", @class = "btn btn-info btn-sm", id = "MC_myvideos_v11_cAlbum" })
            @Html.ActionLink("Upload Video", "UploadMedia", null, new { title = "Upload New Video", @class = "btn btn-success btn-sm", id = id = "MC_myvideos_v11_uVideos" })
            </div>
            <div class="col-xs-12 col-md-6">
                <div id="MC_myvideos_v11_norecord" class="jumbotron marginfixed item_c">
                    @if (ViewBag.NoVideos != null)
                    {
                        <h3 id="MC_myvideos_v11_norec">@ViewBag.NoVideos</h3>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


